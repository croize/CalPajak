<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameText"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="1"
        android:text="@string/nama"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/namaValue"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="2"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent" />

    <TextView
        android:id="@+id/alamatText"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="3"
        android:text="@string/alamat"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/alamatValue"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="4"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent" />

    <Space
        android:layout_width="21dp"
        android:layout_height="1dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="21dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0" />

    <Space
        android:layout_width="64dp"
        android:layout_height="1dp"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="346dp"
        android:layout_height="50dp"
        android:background="#ccc"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="Penghitungan Pajak"
        android:textStyle="bold"
        android:layout_row="5"
        android:layout_column="1" />

    <TextView android:text="Luas tanah" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_row="6"
        android:layout_column="1" />

    <EditText
        android:id="@+id/edt_panjang"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:hint="0"
        android:inputType="number"
        android:layout_marginBottom="5dp"
        android:layout_row="7"
        android:layout_column="1" />

    <TextView android:text="Luas Bangunan" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_row="8"
        android:layout_column="1" />

    <EditText
        android:id="@+id/edt_lebar"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:hint="0"
        android:inputType="number"
        android:layout_marginBottom="5dp"
        android:layout_row="9"
        android:layout_column="1" />

    <TextView android:text="Taman" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_row="10"
        android:layout_column="1" />

    <EditText
        android:id="@+id/edt_taman"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:hint="0"
        android:inputType="number"
        android:layout_marginBottom="5dp"
        android:layout_row="11"
        android:layout_column="1" />

    <Button
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_hitung"
        android:text="Hitung"
        android:layout_marginBottom="8dp"
        android:layout_row="12"
        android:layout_column="1" />

    <TextView android:text="Total PBB : " android:id="@+id/txt_luas" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_row="13"
        android:layout_column="1" />

</GridLayout>
